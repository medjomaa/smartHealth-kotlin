    <style name="ButtonStyle">
        <item name="android:background">#FF6200EE</item> <!-- Purple background -->
        <item name="android:textColor">#FFFFFF</item> <!-- White text -->
        <item name="android:padding">16dp</item> <!-- Padding around text -->
        <item name="android:textSize">18sp</item> <!-- Text size -->
        <item name="android:layout_margin">8dp</item> <!-- Margin around buttons -->
    </style>

    <style name="ProfileTextStyle">
        <item name="android:textColor">#FF6200EE</item> <!-- Purple text color -->
        <item name="android:textSize">24sp</item> <!-- Text size -->
        <item name="android:padding">16dp</item> <!-- Padding around text -->
    </style>

    <style name="SearchInputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">Search Disease</item>
        <item name="android:padding">12dp</item> <!-- Padding inside the EditText -->
        <item name="android:textSize">16sp</item> <!-- Text size -->
        <item name="android:background">#E0E0E0</item> <!-- Light grey background -->
    </style>

    <style name="SearchButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item> <!-- White text color -->
        <item name="android:background">#6200EE</item> <!-- Purple background -->
        <item name="android:padding">8dp</item> <!-- Padding around text -->
        <item name="android:textSize">16sp</item> <!-- Text size -->
    </style>
    <style name="DoctorSearchInputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">Search Doctor</item>
        <item name="android:padding">12dp</item> <!-- Padding inside the EditText -->
        <item name="android:textSize">16sp</item> <!-- Text size -->
        <item name="android:background">#E0E0E0</item> <!-- Light grey background -->
    </style>

    <style name="DoctorSearchButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item> <!-- White text color -->
        <item name="android:background">#6200EE</item> <!-- Purple background -->
        <item name="android:padding">8dp</item> <!-- Padding around text -->
        <item name="android:textSize">16sp</item> <!-- Text size -->
    </style>
